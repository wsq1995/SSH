<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.lanou.staff.domain">
    <class name="Staff" table="crm_staff">
        <id name="staffId" column="STAFF_ID">
            <generator class="uuid"/>
        </id>
        <property name="loginName"/>
        <property name="loginPwd"/>
        <property name="staffName"/>
        <property name="gender"/>
        <property name="onDutyDate"/>
        <many-to-one name="dep" class="Department" cascade="save-update" column="DEPT_ID"/>
        <many-to-one name="post" class="Post" column="POST_ID" cascade="save-update"/>


    </class>

</hibernate-mapping>